package auth

const homeTitle string = "Home"
const homeMetaDescription string = "ThinkLedger | Home page"
const homeScript string = "/static/dist/home.js"

templ HomePage() {
	@AuthLayout(homeTitle, homeMetaDescription, homeScript) {
